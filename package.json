{
  "name": "vega-dx",
  "version": "1.0.5",
  "description": "",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "tsup": {
    "dts": true,
    "bundle": false,
    "treeshake": true,
    "target": "node18",
    "format": [
      "esm",
      "cjs"
    ],
    "entry": [
      "src/**/*.ts"
    ]
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "format": "biome check --apply-unsafe ./src",
    "dev": "tsup --watch",
    "plop": "plop",
    "changeset": "changeset",
    "version-package": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.6.1",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "plop": "^4.0.1",
    "tsup": "^8.0.2",
    "typedocs": "^0.6.7",
    "typescript": "^5.4.3"
  }
}
